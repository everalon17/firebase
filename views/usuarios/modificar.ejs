<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>

<div class="container mt-5">
    <form action="/editar" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Modificar usuario</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= user.id%>">
                <input class="form-control mb-3" type="text" value="<%= user.nombre%>" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" value="<%= user.usuario%>" name="usuario" id="usuario" placeholder="Usuario">
                <input class="form-control mb-3" type="text" value="<%= user.password%>" name="password" id="password" placeholder="Password">
                <input class="form-control mb-3" type="file" value="<%= user.foto%>" name="foto" id="foto" placeholder="Seleccionar archivo">
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary" type="submit">Modificar usuario</button>
            </div>
        </div>
    </form>
</div>

