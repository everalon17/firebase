<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
    
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1>Usuarios</h1>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>    <!--Esto es una fila-->
                        <th>id</th>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Password</th>
                        <th>Foto</th>
                        <th>Editar/Borrar</th>
                    </tr> 
                </thead>
                <tbody>
                    <%
                        usuarios.forEach((usuario,i)=>{    
                    %>
                    <tr>
                        <td><%= (i+1)%></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.usuario %></td>
                        <td>********</td>
                        <td><img src="/Usuarios/images/<%= usuario.foto %>" width="150px"></td>
                        <td>
                            <a href="/editar/<%= usuario.id %>">Editar</a>
                            <a href="/borrar/<%= usuario.id %>">Borrar</a>
                        </td>
                    </tr>
                    <%
                    });
                    %>
                </tbody>
            </table>
        </div>
        <div class="card-footer"></div>
    </div>
</div>

